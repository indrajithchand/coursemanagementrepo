@model IEnumerable<HM.CourseManagement.Data.Enrollment>

<div class="container">    
    <h1>Enrollments</h1>
    <hr />
    <br />
    @if (!string.IsNullOrEmpty(Convert.ToString(TempData["Message"])))
    {
        <div class="text-center alert alert-success">
            <strong>
                @TempData["Message"]
            </strong>
        </div>
    }
    <div style="width:90%; margin:0 auto;">
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead class="thead-dark">
                <tr>
                    <th>Course</th>
                    <th>User</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in Model)
                {
                    <tr>
                        <td><a href="/Course/Details/@enrollment.CourseList.Course.Id">@enrollment.CourseList.Course.Name</a></td>
                        <td>@enrollment.User.Email</td>
                        <td>
                            <a href="/CourseList/Details/@enrollment.CourseList.Id">View</a>
                        </td>
                    </tr>
                }
        </table>
    </div>
</div>
